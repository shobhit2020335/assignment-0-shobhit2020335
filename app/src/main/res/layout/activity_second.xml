<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F3F3F3"
    android:orientation="vertical"
    tools:context=".second">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#F3F3F3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:text="EVENT FEEDBACK"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="(Select The Attended Events)"
            android:textColor="#122F69"
            android:textSize="19sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#FF0000FF" />


        <LinearLayout
            android:id="@+id/musiclayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/musicimg"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/m2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/musiccheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Music"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/musicrating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:numStars="5"
                    android:progressTint="#FFD700"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#FF0000FF"
            tools:layout_editor_absoluteX="16dp" />

        <LinearLayout
            android:id="@+id/dancelayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/danceimg"
                android:layout_width="145dp"
                android:layout_height="105dp"
                android:layout_marginStart="5dp"

                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/dance1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/dancecheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Dance"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/dancerating"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:numStars="5"
                    android:progressTint="#FFD700"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#FF0000FF"
            app:layout_constraintTop_toBottomOf="@+id/playimg"
            tools:layout_editor_absoluteX="16dp" />

        <LinearLayout
            android:id="@+id/playlayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playimg"
                android:layout_width="145dp"
                android:layout_height="105dp"
                android:layout_marginStart="5dp"

                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/pl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/playcheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Play"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/playrating"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:numStars="5"
                    android:progressTint="#FFD700"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#FF0000FF" />


        <LinearLayout
            android:id="@+id/fashionlayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fashionimg"
                android:layout_width="145dp"
                android:layout_height="105dp"

                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/f1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/fashioncheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Fashion"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/fashionrating"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:numStars="5"
                    android:progressTint="#FFD700"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#FF0000FF"
            app:layout_constraintTop_toBottomOf="@+id/fashionimg"
            tools:layout_editor_absoluteX="16dp" />


        <LinearLayout
            android:id="@+id/foodlayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foodimg"
                android:layout_width="145dp"

                android:layout_height="105dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/food" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/foodcheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Food"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/foodrating"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"
                    android:numStars="5"
                    android:progressTint="#FFD700"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#FF0000FF" />

        <LinearLayout
            android:id="@+id/buttonlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#A8EB0000"
                android:text="Clear" />

            <Button
                android:id="@+id/submitbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:backgroundTint="#3BA017"
                android:text="Submit" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>