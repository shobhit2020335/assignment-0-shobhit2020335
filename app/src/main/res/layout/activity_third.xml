<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".third">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/od" />

        <TextView
            android:id="@+id/personaldetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Personal Details"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-thin"
                android:text="Name :   "
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/displayname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-thin"
                android:text="Role   :    "
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/displayrole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="role"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </LinearLayout>


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#400505"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/eventfeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Event Feedback"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/musicb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:buttonTint="@color/black"
                android:text="Music:    "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <RatingBar
                android:id="@+id/musicr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="musicrating"
                android:isIndicator="true"
                android:progressTint="#A61818" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/danceb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:buttonTint="@color/black"
                android:text="Dance:    "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <RatingBar
                android:id="@+id/dancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="dancerating"
                android:isIndicator="true"
                android:progressTint="#A61818" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/playb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:buttonTint="@color/black"
                android:text="Play:        "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <RatingBar
                android:id="@+id/playr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="playrating"
                android:isIndicator="true"
                android:progressTint="#A61818" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/fashionb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:buttonTint="@color/black"
                android:text="Fashion: "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <RatingBar
                android:id="@+id/fashionr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="fashionrating"
                android:isIndicator="true"
                android:progressTint="#A61818" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/foodb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:buttonTint="@color/black"
                android:text="Food:       "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <RatingBar
                android:id="@+id/foodr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="foodrating"
                android:isIndicator="true"
                android:progressTint="#A61818" />
        </LinearLayout>


        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#400505"
            tools:layout_editor_absoluteX="16dp" />
    </LinearLayout>

</ScrollView>